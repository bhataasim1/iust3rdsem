#include <stdio.h>

int main()
{
    float le,br,ra,ar,ar2,p,c;
    
    printf("Enter the Length ",le);
    scanf("%f",&le);
    
    printf("Enter the Breadth ",br);
    scanf("%f",&br);
    
    printf("Enter the Radius of Circle ",ra);
    scanf("%f",&ra);
    
    ar=le*br;
    printf("Area of Rectangle is %f \n",ar);
    
    p=2*(le+br);
    printf("Perimetere of Rectangle is %f \n",p);
    
    ar2=3.14159*(ra*ra);
    printf("Area of Circle is %f \n",ar2);
    
    c=2*3.14159*ra;
    printf("Circumfrence of Circle is %f \n",c);
    

    return 0;
}
