#include <iostream>

using namespace std;

int main()
{
    int i;
    float fact = 1.0, a, b = 0;
    
    for ( i = 1; i < 8; i++)   //loop counter for 7 steps (1 to 8)
    {
        fact = fact * i;       //find factorial for 1 to 7
        
        a = i/fact;            //find the i/factof(i)
        
        b = b + a;       //add all the results
    }
    cout << b;

    return 0;
}
