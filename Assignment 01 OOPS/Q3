#include <iostream>

using namespace std;

int main()
{
    int n;
    cout << "Enter the Number of Days : ";
    cin >> n;
    
    int temprature[n];
    cout << "Enter the Temprature Values : " << endl;
    for (int i = 0; i < n; i++)
    cin >> temprature[i];
    
    int hot_days = 0, cold_days = 0, pleasent_days = 0;
    for (int i = 0; i< n; i++)
    {
        cout << temprature[i] ;
        
        if(temprature[i] >= 85)
        {
            cout << "Hot Day" << endl;
            hot_days++;
        }
        else if (temprature[i] >= 60 && temprature[i] < 85)
        {
            cout << "Pleasent Day" << endl;
            pleasent_days++;
        }
        else if (temprature[i] < 60)
        {
          cout << "Cold Day" << endl;
          cold_days++;
        }
        else
        cout << "Days";
    }
    cout << "Hot Days : " << hot_days << endl;
    cout << "Pleasent Days : " << pleasent_days << endl;
    cout << "Cold Days : " << cold_days << endl;

    return 0;
}
